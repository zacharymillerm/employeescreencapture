<Window x:Class="EmployeeApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EmployeeApp.Views"
        xmlns:vm="clr-namespace:EmployeeApp.ViewModels"
        Title="Eagle Vision+" Height="250" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/Views/eye-scan.png">
	<Window.DataContext>
		<vm:MainWindowViewModel />
	</Window.DataContext>
	<Grid Margin="10">
		<StackPanel>
			<TextBlock Text="Server IP Address:" FontWeight="Bold" Margin="10,20,0,5"/>
			<TextBox Text="{Binding ServerIp}" Width="200" Height="25" Margin="70,0,0,10" Name="serverIPText"/>

			<TextBlock Text="Employee ID:" FontWeight="Bold" Margin="10,0,0,5"/>
			<TextBox Text="{Binding EmployeeId}" Width="200" Height="25" Margin="70,0,0,30" Name="employeeIdText"/>
			<Button Content="Save and Start" Width="100" Click="SaveButton_Click" Name="startButton"/>
		</StackPanel>
	</Grid>
</Window>
